<%= form_tag(students_path method: :get) do %>
  Student <%= text_field_tag :student, params[:query] %>
  <%= submit_tag 'Search', name: nil %>
<% end %>
  <ul>
    <li>
      Name: <%= student.name %>
    </li>
    <li>
      Birthday: <%= student.birthday.strftime("%m/%d/%Y")  %>
    </li>
    <li>
      Hometown: <%= student.hometown.capitalize %>
    </li>
  </ul>
